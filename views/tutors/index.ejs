<% layout('layouts/boilerplate') %>
<div class="container my-5 px-0">
    <h1 class="my-5 text-center  display-1">All Posts</h1>
    <% for(let tutor of tutors){ %>
      <div class="card my-3">
        <div class="row">
            <div class="col-md-4">
                <img src="https://res-console.cloudinary.com/ddq0vfoi3/media_explorer_thumbnails/8d386df87d859bcd348a946438327741/detailed" alt="" class="img-fluid rounded-start" style="height: 100%">
            </div>
            <div class="col-md-8 align-self-center">
                <div class="card-body">
                    <h5 class="card-title"><%= tutor.title %> </h5>
                    <p class="card-text"><%= tutor.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= tutor.city%>, <%= tutor.country %></small>
                    </p>
                    <a class="btn btn-primary" href="/tutors/<%=tutor._id%>">View</a>
                </div>
            </div>
        </div>
      </div>
    <% } %>
</div>